<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="24dp">
        <TextView
            android:id="@+id/main_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="War card game"
            android:textColor="@color/mainTitleColor"
            android:textSize="44sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingTop="24dp">
            <TextView
                android:id="@+id/main_LBL_setPlayerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="24dp"
                android:text="Insert players name:"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingTop="24dp">
                <TextView
                    android:id="@+id/main_LBL_player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:text="Player1:"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/main_EDTTXT_player1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="player1"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:visibility="visible" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingTop="24dp">
                <TextView
                    android:id="@+id/main_LBL_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="24dp"
                    android:text="Player2:"
                    android:textColor="@color/white"
                    android:textSize="24sp" />
                <EditText
                    android:id="@+id/main_EDTTXT_player2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:hint="player2"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/hint_color"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/main_BTN_start"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:src="@drawable/start_btn"
                android:text="Start Game" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


